    </rules>
    <rules>
        <fullName>WF07_WOR_ACC_Envoi_notification_mail_si_echec_synchronisation_Foyer</fullName>
        <actions>
            <name>Alerte_Synchronisation_Foyer_SI_Panel_Echouee</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <description>WF ayant pour but de déclencher un envoi de notification par mail lorsqu&apos;une synchronisation SI-Panel échoue pour un enregistrement de Foyer.</description>
        <formula>OR( 				AND(!$User.Bypass_workflows__c , 								!$User.Bypass_RDD__c,  								ISCHANGED(Message_en_cas_d_erreur__c),  								!ISNULL(Message_en_cas_d_erreur__c),  								!ISBLANK(Message_en_cas_d_erreur__c) ),  				AND( !$User.Bypass_workflows__c,  								!$User.Bypass_RDD__c,  								ISCHANGED(Appel_OK_KO__c),  								ISPICKVAL(Appel_OK_KO__c,&quot;KO&quot;)  							) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
